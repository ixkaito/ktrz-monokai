{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "es2015",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./assets/js",
    "removeComments": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./assets/_src/js/**/*"
  ],
  "exclude": [
    "./_site/**/*"
  ]
}
